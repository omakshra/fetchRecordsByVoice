@page
@model IndexModel
<h2>Flask Connection Test</h2>

<button onclick="checkFlaskConnection()">Ping Flask</button>

<p id="pingResult"></p>

<script>
    async function checkFlaskConnection() {
        try {
            const response = await fetch("http://localhost:5000/ping");
            const data = await response.json();
            document.getElementById("pingResult").innerText = "Success: " + data.message;
        } catch (error) {
            document.getElementById("pingResult").innerText = "Failed to connect to Flask.";
            console.error(error);
        }
    }
</script>
