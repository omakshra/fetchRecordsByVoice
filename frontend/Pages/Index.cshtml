@page
@model IndexModel
@{
    ViewData["Title"] = "RMS Dashboard";
}

<!-- Bootstrap 5 -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .dashboard-title {
        font-size: 2.2rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .card:hover {
        transform: translateY(-5px);
        transition: transform 0.2s ease-in-out;
    }

    .card-title i {
        margin-right: 10px;
    }
</style>

<div class="container mt-5">
    <h2 class="text-center dashboard-title">🚔 Police RMS Dashboard</h2>
    <p class="text-center text-muted mb-5">Manage and access citizen and criminal records efficiently.</p>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        <i class="fas fa-folder-open text-primary"></i> Records
                    </h5>
                    <p class="card-text text-muted">
                        Add and view citizen or criminal records. Use typed commands to query records.
                    </p>
                    <a href="/Records" class="btn btn-primary w-100">Go to Records</a>
                </div>
            </div>
        </div>
    </div>
</div>
