@page
@model IndexModel
@{
    ViewData["Title"] = "Police RMS Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <h2 class="text-center mb-4">🚔 Police RMS Dashboard</h2>

    <div class="row g-4">
        <!-- Records -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">📇 Records</h5>
                    <p class="card-text">Manage citizen and criminal records. Add or fetch using voice.</p>
                    <a href="/Records" class="btn btn-primary">Go to Records</a>
                </div>
            </div>
        </div>

        <!-- Reports -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">📝 Reports</h5>
                    <p class="card-text">Submit incident reports manually or using guided voice input.</p>
                    <a href="/Report" class="btn btn-primary">Go to Reports</a>
                </div>
            </div>
        </div>

        <!-- Shift Summary -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">📋 Shift Summary</h5>
                    <p class="card-text">Use voice dictation to summarize your shift using AI.</p>
                    <a href="/Summary" class="btn btn-primary">Summarize Shift</a>
                </div>
            </div>
        </div>

        <!-- Evidence Summary (Coming Soon) -->
        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-warning">
                <div class="card-body">
                    <h5 class="card-title">🖼️ Evidence Summary <span class="badge bg-warning text-dark">Coming Soon</span></h5>
                    <p class="card-text">Upload image evidence and get a caption and summary using AI.</p>
                    <a href="/Evidence" class="btn btn-outline-secondary disabled">Coming Soon</a>
                </div>
            </div>
        </div>

        <!-- AI Assistant Chatbot (Coming Soon) -->
        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-info">
                <div class="card-body">
                    <h5 class="card-title">🤖 AI Assistant <span class="badge bg-info text-dark">Coming Soon</span></h5>
                    <p class="card-text">Talk or type to a smart assistant for help with tasks or data.</p>
                    <a href="/ChatBot" class="btn btn-outline-secondary disabled">Coming Soon</a>
                </div>
            </div>
        </div>
    </div>
</div>
