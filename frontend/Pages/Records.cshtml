@page
@model Frontend.Pages.RecordsModel
@{
    ViewData["Title"] = "Records";
}
<link rel="stylesheet" href="~/css/Records.css" />
<h2>📇 Records Management</h2>

<div class="tabs">
    <div class="tab active" onclick="switchSection('citizen')">Citizen</div>
    <div class="tab" onclick="switchSection('criminal')">Criminal</div>
</div>

<!-- Citizen Section -->
<div id="citizen" class="section active">
    <h4>Add Citizen</h4>
    <form method="post" asp-page-handler="AddCitizen">
        <div>
            <label>Name</label>
            <input type="text" name="Citizen.Name" required />
        </div>
        <div>
            <label>Age</label>
            <input type="number" name="Citizen.Age" required />
        </div>
        <div style="grid-column: span 2;">
            <label>Address</label>
            <input type="text" name="Citizen.Address" required />
        </div>
        <div style="grid-column: span 2;">
            <label>Government ID</label>
            <input type="text" name="Citizen.GovernmentId" required />
        </div>
        <button type="submit">Add Citizen</button>
    </form>

    <h5>Citizen Records</h5>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Address</th>
                <th>Gov. ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model.Citizens)
            {
            <tr>
                <td>@c.Name</td>
                <td>@c.Age</td>
                <td>@c.Address</td>
                <td>@c.GovernmentId</td>
            </tr>
            }
        </tbody>
    </table>
</div>

<!-- Criminal Section -->
<div id="criminal" class="section">
    <h4>Add Criminal</h4>
    <form method="post" asp-page-handler="AddCriminal">
        <div>
            <label>Name</label>
            <input type="text" name="Criminal.Name" required />
        </div>
        <div>
            <label>Crime</label>
            <input type="text" name="Criminal.Crime" required />
        </div>
        <div>
            <label>Date Arrested</label>
            <input type="date" name="Criminal.DateArrested" required />
        </div>
        <div>
            <label>Government ID</label>
            <input type="text" name="Criminal.GovernmentId" required />
        </div>
        <button type="submit" class="criminal">Add Criminal</button>
    </form>

    <h5>Criminal Records</h5>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Crime</th>
                <th>Date Arrested</th>
                <th>Gov. ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model.Criminals)
            {
            <tr>
                <td>@c.Name</td>
                <td>@c.Crime</td>
                <td>@c.DateArrested.ToShortDateString()</td>
                <td>@c.GovernmentId</td>
            </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/records.js"></script>
